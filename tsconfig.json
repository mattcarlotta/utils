{
  "compilerOptions": {
    "diagnostics": true,
    "declaration": true,
    "noEmitOnError": true,
    "allowJs": false,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "target": "es5"
  },
  "include": ["**/*.ts", "__tests__/waitForAct.spec.tsx"],
  "exclude": [".github", "coverage", "node_modules"]
}
